{
    "name": "alephtools/ddd",
    "type": "library",
    "description": "Helpful instruments for Domain Driven Design.",
    "license": "MIT",
    "keywords": ["aleph", "ddd", "clean architecture"],
    "authors": [
        {
            "name": "Aleph Tav",
            "email": "4lephtav@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-bcmath": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "friendsofphp/php-cs-fixer": "3.*",
        "vimeo/psalm": "4.*",
        "psalm/plugin-phpunit": "0.*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "AlephTools\\DDD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlephTools\\DDD\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "@php-cs-fixer fix --dry-run --diff",
        "cs-fix": "@php-cs-fixer fix",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml --no-cache",
        "test": "XDEBUG_MODE=coverage phpunit"
    }
}
