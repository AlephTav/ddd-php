{
    "name": "alephtools/ddd",
    "type": "library",
    "description": "Helpful instruments for Domain Driven Design.",
    "license": "MIT",
    "keywords": ["aleph", "ddd", "clean architecture"],
    "authors": [
        {
            "name": "Aleph Tav",
            "email": "4lephtav@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-bcmath": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "AlephTools\\DDD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlephTools\\DDD\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
